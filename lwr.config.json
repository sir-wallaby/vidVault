{
    "lwc": { "modules": [{ "dir": "$rootDir/src/modules" },{ "npm": "lightning-base-components" }] },
    "routes": [
        {
            "id": "vidVault",
            "path": "/",
            "rootComponent": "vva/app",
            "layoutTemplate": "$layoutsDir/main_layout.html",
         
            "bootstrap": {
            "syntheticShadow": true
            }
        }
    ],
    "assets": [
        {
            "alias": "assetsDir",
            "dir": "$rootDir/src/assets",
            "urlPath": "/assets"
        },
        {
            "file": "$rootDir/src/assets/icons/utility-sprite/svg/symbols.svg",
            "urlPath": "/lightning.utilitySprite"
        }
    ],
    "layoutsDir": "$rootDir/src/layout"
}
